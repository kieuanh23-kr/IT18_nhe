<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="5dp"
        android:visibility="gone"/>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#004aad"
        android:id="@+id/toolbar_1">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#004aad"
            app:title="Nhật ký đa phương tiện"
            app:titleTextColor="@android:color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/add"
        android:src="@drawable/icon_add_24px"
        android:background="@drawable/back_circle_white"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_1"
        app:layout_constraintTop_toTopOf="@id/toolbar_1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nhatkidon_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            tools:listitem="@layout/nhatki_don"
            app:layout_constraintTop_toBottomOf="@id/toolbar_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#004aad"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible">

        <ImageButton
            android:id="@+id/icon_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_close_24px"
            android:layout_marginEnd="150dp"
            android:background="@drawable/back_circle_white"/>


        <ImageButton
            android:id="@+id/icon_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_delete"
            android:background="@drawable/back_circle_white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/nhatkidon">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/icon"
            android:background="@drawable/back_circle_red"
            android:src="@drawable/icon_favorite_24px"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/icon_chon"
            android:background="@drawable/back_circle_black"
            android:src="@drawable/icon_check"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvTieude"
            app:layout_constraintTop_toTopOf="@id/nhatkidon"
            app:layout_constraintStart_toEndOf="@id/icon"
            android:layout_marginLeft="20dp"
            android:text="Tiêu đề nhật ..."
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/phanloai"
            app:layout_constraintStart_toEndOf="@id/tvTieude"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="20dp"
            android:text="Nhãn dán 1"
            android:background="@drawable/back_square_blue"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ngay"
            app:layout_constraintStart_toStartOf="@id/tvTieude"
            app:layout_constraintBottom_toBottomOf="@id/icon"
            android:text="01/12/2025"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gio"
            app:layout_constraintStart_toEndOf="@id/ngay"
            app:layout_constraintBottom_toBottomOf="@id/ngay"
            android:layout_marginLeft="10dp"
            android:text="20h00"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>